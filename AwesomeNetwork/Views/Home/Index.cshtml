@using AwesomeNetwork.ViewModels.Account;
@using Microsoft.AspNetCore.Identity;
@using AwesomeNetwork.Models.Users;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div>Hello @User.Identity!</div>
}
else
{
    <div class="row">
        <div class="side">
            <div class="center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
            </div>
            <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />
        </div>

        <div class="main">
            @{
                var model = new MainViewModel();
                <partial name="Login" model="model.LoginView" />
                <partial name="Register" model="model.RegisterView"/>
            }
        </div>
    </div>
}
